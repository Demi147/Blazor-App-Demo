@inherits LayoutComponentBase

@inject AuthenticationStateProvider authenticationService;
@inject NavigationManager navManager;
@using Services;

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">

        <a href="/Data/User"> click here for valid users</a>

        <AuthorizeView>
            <Authorized>
                <a href="/" @onclick="(() => Logout())">Logout of @context.User.Identity.Name</a>
            </Authorized>
            <NotAuthorized>
                <a href="/Login">Login</a>
            </NotAuthorized>
        </AuthorizeView>

        <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code{
    public void Logout()
    {
        ((CustomAuthenticationStateProvider)authenticationService).MarkUserAsLoggedOut();
    }
}
