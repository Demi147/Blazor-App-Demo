        Code to display the table with the books +++++STARTS++++++
    ##########################################################################################################*@

@if (booksList is null)
{
    <p><en>Loading...</en></p>

}
else
{
    <table class="table table-hover">
        <thead class="thead-light">
            <tr>
                <th>Title</th>
                <th>Price</th>
                <th>Institute</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in booksList)
            {
                <tr>
                    <td href="#" data-toggle="tooltip" title="See Book Info"><NavLink href=@string.Format("/BooksPages/Main/{0}",item.SalesNumber)>@item.BookTitle</NavLink></td>
                    <td>@item.BookPrice</td>
                    <td>@item.BookInstitute</td>
                </tr>
            }
        </tbody>
    </table>
}

